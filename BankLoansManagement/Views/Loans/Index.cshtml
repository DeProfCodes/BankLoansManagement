@model List<BankLoansManagement.ViewModels.UserLoanViewModel>

@{
  ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
  <input type="button" class="btn btn-success" value="Create new loan" onclick="window.location='@Url.Action("Create", "Loans", new { userId = -1})'" />
  <input type="button" class="btn btn-primary" value="View Users" onclick="window.location='@Url.Action("Index", "Users")'" />
</p>

<form asp-controller="Loans" asp-action="Index" method="get">
  <div class="row">
    <div class="col-md-3">
      <input type="text" placeholder="Enter loan type" name="searchString" class="form-control text-dark border-dark">
    </div>
    <div class="col-md-3">
      <input type="submit" class="btn btn-primary" value="Search" style="margin:0; height:auto" />
    </div>
  </div>
</form>

<table class="table">
  <thead>
    <tr>
      <th>
        Firstname
      </th>
      <th>
        Lastname
      </th>
      <th>
        ID Number
      </th>
      <th>
        Amount
      </th>
      <th>
        Term in Months
      </th>
      <th>
        Interest Rate
      </th>
      <th>
        Loan Type
      </th>
      <th>
        Total Amount
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.User.FirstName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.User.LastName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.User.IdNumber)
        </td>
        <td>
          R @Html.DisplayFor(modelItem => item.Loan.Amount)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Loan.Term)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Loan.InterestRate) %
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Loan.Type)
        </td>
        <td>
          R @Html.DisplayFor(modelItem => item.Loan.Total)
        </td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.Loan.Id">Edit</a> |
          <a asp-action="Details" asp-route-id="@item.Loan.Id">Details</a> |
          <a asp-action="Delete" asp-route-id="@item.Loan.Id">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
