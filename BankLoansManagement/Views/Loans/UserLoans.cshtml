@{
  ViewData["Title"] = "Index";
}

<div>
  <h1>User Loans Management</h1>
  <p>
    <input type="button" class="btn btn-success" value="Create new loan" onclick="window.location='@Url.Action("Create", "Loans", new { userId = -1})'" />
    <input type="button" class="btn btn-primary" value="View Users" onclick="window.location='@Url.Action("Index", "Users")'" />
  </p>

  <br />
  <br />

  <div>
    <div id="position">
      <h3>Filter Loans By Type</h3>
      <input type="checkbox" name="pos" value="Personal Loan"><span style="margin-left:7px">Personal Loan </span>
      <input type="checkbox" name="pos" value="Vehicle Loan" style="margin-left:10px"><span style="margin-left:7px">Vehicle Loan </span>
      <input type="checkbox" name="pos" value="Home Loan" sstyle="margin-left:10px"><span style="margin-left:7px">Home Loan </span>
    </div>
  </div>
  <hr />
  <div class="row p-0 m-0">
    <div>
      <h3>Totals</h3>
      <p> Total Fees :<span id="totalFees" style="font-weight:bold; margin-left:15px"></span></p>
      <p> Loan Totals :<span id="loanTotals" style="font-weight:bold; margin-left:15px"></span></p>
    </div>
    <div class="col-12 border p-3">
      <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
          <tr>
            <th>Client Firstname</th>
            <th>Client Lastname</th>
            <th>Client ID Nmber</th>
            <th>Loan Amount (R)</th>
            <th>Loan Type</th>
            <th>Loan Interest Rate (%)</th>
            <th>Loan Total Amount (R)</th>
            <th></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>
