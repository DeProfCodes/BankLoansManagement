@model BankLoansManagement.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Users Management";
}

<div class="col-md-10 offset-1">
    <br />
    <h1>Users Management</h1>
    <br />
    <input type="button" class="btn btn-success" value="Create new user" onclick="window.location='@Url.Action("Create", "Users")'"/>
    <br />
    <br />
    <form asp-controller="Users" asp-action="Index" method="get">
        <div class="row">
            <div class="col-md-3">
                <input type="text" placeholder="Enter username to search" name="searchString" class="form-control text-dark border-dark" >
            </div>
            <div class="col-md-3">
                <input type="submit" class="btn btn-primary" value="Search" style="margin:0; height:auto"/>
            </div>
        </div>
    </form>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Firstname
                </th>
                <th>
                    Lastname
                </th>
                <th>
                    ID Number
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => user.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.IdNumber)
                    </td>
                    <td>
                        <input type="button" class="btn btn-success" value="Details" onclick="window.location='@Url.Action("Details", "Users", new { id = user.UserId })'" />
                    </td>
                    <td>
                        <input type="button" class="btn btn-primary" value="Edit" onclick="window.location='@Url.Action("Edit", "Users", new { id = user.UserId })'" />
                    </td>
                    <td>
                        <input type="button" class="btn btn-danger" value="Delete" onclick="window.location='@Url.Action("Delete", "Users", new { id = user.UserId })'" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
    <br />
    <input type="button" class="btn btn-primary" value="Back" onclick="window.location='@Url.Action("Admin", "Dashboard")'" />
    <br />
    <br />
</div>